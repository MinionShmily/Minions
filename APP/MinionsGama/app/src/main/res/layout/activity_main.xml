<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shmily.minionsgama.MainActivity"
    android:background="@drawable/starynight2">
    <RelativeLayout
        android:id="@+id/Login_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login"
            android:textColor="#fcfbfc"
            android:textSize="20dp"
            android:background="#4f8bdf"
            android:gravity="center"
            android:id="@+id/textView" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Login_top"
        android:paddingTop="100dp">


        <TextView
            android:id="@+id/tv_users"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Users:"
            android:textSize="18dp"
            android:textColor="#fefcfd"
            android:gravity="center"
            android:paddingLeft="20dp"

            android:drawableLeft="@drawable/users"


            android:layout_toLeftOf="@+id/et_users"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/et_users"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_password"
            android:layout_toEndOf="@+id/tv_password" />
        <TextView
            android:id="@+id/tv_password"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="Password:"
            android:textSize="18dp"
            android:textColor="#fafafb"
            android:gravity="center"
            android:paddingLeft="19dp"
            android:layout_below="@id/tv_users"
            android:drawableLeft="@drawable/password"
            />
        <CheckBox
            android:id="@+id/rem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#fefcfd"
            android:text="Remember"
            android:textColor="#fefcfd"
            android:textSize="20sp"
            android:layout_below="@+id/tv_password"
            android:layout_alignLeft="@+id/telcent"
            android:layout_alignStart="@+id/telcent" />
        <TextView
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#fefcfd"
            android:text="Forget?"
            android:textColor="#fefcfd"
            android:textSize="20sp"
            android:layout_marginLeft="95dp"
            android:layout_marginStart="95dp"
            android:paddingTop="5dp"
            android:layout_above="@+id/login"
            android:layout_toRightOf="@+id/sign"
            android:layout_toEndOf="@+id/sign" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/et_users"
            android:inputType="numberPassword"
            android:layout_toRightOf="@+id/tv_password"
            android:layout_toEndOf="@+id/tv_password" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_alignBaseline="@+id/sign"
            android:layout_alignBottom="@+id/sign"
            android:layout_alignRight="@+id/forget"
            android:layout_alignEnd="@+id/forget" />
        <Button
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Sign"
            android:layout_below="@+id/rem"
            android:layout_toRightOf="@+id/tv_password"
            android:layout_toEndOf="@+id/tv_password"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />
        <ImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/telent"
            android:id="@+id/telcent"
            android:layout_above="@+id/line1"
            android:layout_toLeftOf="@+id/sign"
            android:layout_toStartOf="@+id/sign" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/weixin"
            android:id="@+id/weixin"
            android:layout_alignTop="@+id/telcent"
            android:layout_toLeftOf="@+id/forget"
            android:layout_toStartOf="@+id/forget" />
        <TextView
            android:id="@+id/line1"
            android:layout_above="@id/bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:background="#ffffff"
            />
        <TextView
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Powered by: Minions"
            android:textColor="#fefcfd"
            android:textSize="18sp"
            android:gravity="center"
           />
    </RelativeLayout>


</RelativeLayout>
